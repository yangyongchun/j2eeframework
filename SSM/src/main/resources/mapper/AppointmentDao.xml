<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yyc.dao.AppointmentDao">
    <!-- 目的：为dao接口方法提供sql语句配置 -->
    <select id="queryById" resultType="Appointment" parameterType="long">
        <!-- 具体的sql -->
        SELECT
            book_id,
            student_id,
            appoint_time
        FROM
            appointment
        WHERE
            book_id = #{bookId}
    </select>

   
</mapper>
